<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/item_back">
        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>
        <View
            android:id="@+id/view"
            android:layout_width="2dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/device_icon"
            android:layout_marginLeft="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""

            android:textColor="#373737"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/header_txt"
            android:gravity="center"
            android:layout_toRightOf="@+id/view"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/device_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No device"
            android:textColor="@color/main_color"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/sab_txt"
            android:layout_below="@+id/device_name"
            android:gravity="center"
            android:layout_marginTop="5dp"

            android:layout_toRightOf="@+id/view"
            />
        <ImageView
            android:id="@+id/select_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/right_unselect"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/unselect_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/right_img"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:visibility="gone"
            />
    </RelativeLayout>

</LinearLayout>