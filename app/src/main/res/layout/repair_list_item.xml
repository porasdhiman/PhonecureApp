<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/item_back"
        android:padding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/tech_view"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/user_back" />

            <!-- <ImageView
                 android:id="@+id/dot_img"
                 android:layout_width="25dp"
                 android:layout_height="25dp"
                 android:layout_marginLeft="40dp"
                 android:src="@drawable/red_dot"


                 />-->

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/tech_view"
                android:text="iFaxihat"
                android:textColor="#000"
                android:textSize="@dimen/sab_txt" />

           <!-- <TextView
                android:id="@+id/specilist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tech_view"
                android:text="iPhone specialist"
                android:textColor="#d1d1d1"
                android:textSize="@dimen/main_txt" />-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/tech_view"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/loc_shape" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_view"
                    android:text="0.9 Km Away"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/main_txt" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star" />

                <TextView
                    android:id="@+id/rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/user_view"
                    android:text="5.0"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/main_txt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="25dp"
                    android:src="@drawable/setting" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_call_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"

                android:layout_alignParentRight="true"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/setting_click_back"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="4">

                <ImageView
                    android:id="@+id/call"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/call" />

                <ImageView
                    android:id="@+id/chat"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/chat" />

                <ImageView
                    android:id="@+id/message"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="6dp"
                    android:src="@drawable/message" />

                <ImageView
                    android:id="@+id/cancel"

                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:src="@drawable/cancel" />

            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>