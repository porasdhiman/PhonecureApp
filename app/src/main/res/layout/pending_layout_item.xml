<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"

    >

    <LinearLayout
        android:id="@+id/setting_call_layout"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/delete_back"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"

        >

        <ImageView
            android:id="@+id/delete_img"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/checkedwhite" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark to Done"
            android:textColor="#fff"
            android:textSize="@dimen/sab_txt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/item_back"
            android:padding="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tech_view"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/user_back" />

                <!-- <ImageView
                     android:id="@+id/dot_img"
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_marginLeft="40dp"
                     android:src="@drawable/red_dot"


                     />-->

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/tech_view"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/header_txt" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"

                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/tech_view"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/delivered_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"

                        android:layout_toRightOf="@+id/user_view"
                        android:text="Delivery date:"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/main_txt" />

                    <TextView
                        android:id="@+id/delivered_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/user_view"
                        android:text=""
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/main_txt" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/price_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"

                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/user_view"
                        android:text=""
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/header_txt" />
                </LinearLayout>

                <TextView
                    android:id="@+id/status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/price_layout"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/name"
                    android:gravity="right"

                    android:textColor="@color/main_color"
                    android:textSize="@dimen/main_txt" />


            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
</com.daimajia.swipe.SwipeLayout>