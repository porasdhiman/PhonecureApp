<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/header_view"
        android:background="#000"
        >
        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:padding="8dp"


            android:layout_alignParentLeft="true"
            android:src="@drawable/white_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You'r almost done"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            />
        <!-- <ImageView
             android:layout_width="40dp"
             android:layout_height="40dp"
             android:layout_centerVertical="true"
             android:padding="8dp"


             android:layout_alignParentRight="true"
             android:src="@drawable/heart_img"/>-->
    </RelativeLayout>
    <ScrollView
        android:id="@+id/main_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/main_color"


                >

                <ImageView
                    android:id="@+id/first_count_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/step_one_right_light"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"

                    android:layout_marginLeft="10dp"
                    />
                <ImageView
                    android:id="@+id/first_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/linew_white"
                    android:layout_toRightOf="@+id/first_count_img"
                    android:layout_toLeftOf="@+id/second_count_img"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="-10dp"
                    />
                <ImageView
                    android:id="@+id/second_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_img"
                    android:layout_toRightOf="@+id/first_line"
                    android:layout_toLeftOf="@+id/third_count_img"
                 android:layout_marginLeft="20dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/second_count_img"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/step_two_light"
                    android:textColor="@color/main_color"
                    android:layout_centerInParent="true"

                    />

                <TextView
                    android:id="@+id/third_count_img"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/step_three_dark"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
android:layout_centerVertical="true"
                    />


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Additional address for repair"
                    android:textColor="#000"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <EditText
                    android:id="@+id/first_name_ed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="First name"
                    android:textColor="#000"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:padding="10dp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>

                <EditText
                    android:id="@+id/last_name_ed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Last name"
                    android:textColor="#000"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Address"
                    android:textColor="#000"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/address_ed" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">
                <EditText
                    android:id="@+id/city_ed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="City"
                    android:textColor="#000"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:padding="10dp"/>
                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"/>

                <EditText
                    android:id="@+id/zip_ed"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="Zip"
                    android:textColor="#000"
                    android:textColorHint="@android:color/darker_gray"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/cursore_color"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/phone_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Phone"
                    android:textColor="#000"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@null"
                    android:maxLength="10"
                    android:inputType="number"
                    android:textCursorDrawable="@drawable/cursore_color"

                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Express Payment"
                    android:textColor="@android:color/darker_gray"
                    android:textColorHint="#000"
                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"


                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Total:"
                    android:textColor="#000"

                    android:textSize="16sp"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"


                    />
                <TextView
                    android:id="@+id/total_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="$300"
                    android:textColor="#000"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"/>

            <TextView
                android:id="@+id/btn_start"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/green_btn"
                android:text="Payment"
                android:gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textAllCaps="true"
                android:textSize="@dimen/header_txt"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>