<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/item_back">

        <ImageView
            android:id="@+id/device_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/device_icon"
            android:gravity="center"
            android:text=""
            android:textColor="#373737"

            android:textSize="@dimen/header_txt"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/select_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_unselect" />

        <ImageView
            android:id="@+id/unselect_img"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/right_img"

            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/device_name"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"

            android:layout_toRightOf="@+id/device_icon"
            android:background="#fff">
            <!--<RelativeLayout
                android:id="@+id/all_select_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">
            <ImageView
                android:id="@+id/select_all_img"
                android:layout_width="30dp"
                android:layout_height="30dp"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select All"
               android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/select_all_img"
                android:textColor="#000"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/header_txt"/>
            </RelativeLayout>
-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"

                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/time_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_alignParentLeft="true"


                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sab_txt" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1">


                    <TextView
                        android:id="@+id/price_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:text="price: "
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sab_txt" />

                    <TextView
                        android:id="@+id/price_ed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/price_txt"

                        android:background="#F9B77D"
                        android:gravity="center"
                        android:inputType="numberDecimal"
                        android:paddingBottom="3dp"
                        android:paddingLeft="5dp"

                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:text=""
                        android:textColor="#fff"
                        android:textSize="@dimen/sab_txt" />
                </RelativeLayout>

                <!--  <View
                      android:layout_width="1dp"
                      android:layout_height="match_parent"
                      android:background="#efefef" />-->


            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>