<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"


            android:padding="8dp"
            android:src="@drawable/white_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Appointment Details"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/item_back">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/user_view"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:src="@drawable/user_back" />

                    <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/user_view"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="@dimen/header_txt" />

                    <TextView
                        android:id="@+id/address_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_txt"
                        android:layout_marginLeft="20dp"

                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/user_view"
                        android:text=""
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/header_txt" />


                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back">

                <View
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/calender_img"
                    android:background="#e6e4e4" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/view">

                    <TextView
                        android:id="@+id/order_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="5dp"

                        android:text="Order date"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sab_txt" />

                    <TextView
                        android:id="@+id/date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/order_txt"

                        android:layout_centerInParent="true"
                        android:text=""


                        android:textColor="#000"
                        android:textSize="@dimen/header_txt" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/calender_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/calendar_img" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back">

                <View
                    android:id="@+id/close_view"
                    android:layout_width="1dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/calender_img2"
                    android:background="#e6e4e4" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/close_view">

                    <TextView
                        android:id="@+id/close_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_marginTop="5dp"

                        android:text="Close date"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sab_txt" />

                    <TextView
                        android:id="@+id/close_date_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/close_txt"

                        android:layout_centerInParent="true"
                        android:text=""


                        android:textColor="#000"
                        android:textSize="@dimen/header_txt" />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/calender_img2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignBottom="@+id/close_view"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/calendar_img" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/order_serview_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"

                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Order Services"


                        android:textColor="#000"
                        android:textSize="@dimen/header_txt"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e6e4e4" />

                    <ListView
                        android:id="@+id/service_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.5dp"></ListView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e6e4e4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/totaltxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:text="Total"
                            android:textAllCaps="true"

                            android:textColor="#000"
                            android:textSize="@dimen/header_txt"

                            />

                        <TextView
                            android:id="@+id/total_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="10dp"

                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingRight="10dp"

                            android:text="$70"
                            android:textColor="@color/main_color"
                            android:textSize="@dimen/header_txt"

                            />
                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/cancel_request_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_btn"
                android:gravity="center"
                android:text="Cancel Request"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="16dp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>