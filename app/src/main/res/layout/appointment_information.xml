<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"


            android:padding="8dp"
            android:src="@drawable/white_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Appointment Details"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/item_back">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/user_view"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/user_back" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/user_view"
                    android:text="iFaxihat"
                    android:textColor="#000"
                    android:textSize="@dimen/sab_txt" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/user_view"
                    android:text="stienbakkerlaan 7"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/sab_txt" />


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_back">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/date_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_centerInParent="true"
                    android:text="saturday Feb 26,2018"


                    android:textColor="#000"
                    android:textSize="@dimen/sab_txt" />


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_back">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp">


                <TextView
                    android:id="@+id/time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_centerInParent="true"
                    android:text="12:00 Am to 10:00 PM"


                    android:textColor="#000"
                    android:textSize="@dimen/sab_txt" />


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/item_back">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/order_serview_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"

                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="Order Service"


                    android:textColor="#000"
                    android:textSize="@dimen/header_txt"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"

                            android:layout_marginLeft="10dp"
                            android:gravity="center"

                            android:text="iPhone 6s LCD"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/main_txt"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"

                            android:layout_marginLeft="10dp"
                            android:gravity="center"

                            android:text="55 mins"
                            android:textColor="#0000ff"
                            android:textSize="@dimen/main_txt"

                            />
                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"

                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="10dp"

                        android:text="$30"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/main_txt"

                        />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"

                            android:layout_marginLeft="10dp"
                            android:gravity="center"

                            android:text="iPhone Home Button"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/main_txt"

                            />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"

                            android:layout_marginLeft="10dp"
                            android:gravity="center"

                            android:text="12 mins"
                            android:textColor="#0000ff"
                            android:textSize="@dimen/main_txt"

                            />
                    </LinearLayout>

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"

                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="10dp"

                        android:text="$40"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/main_txt"

                        />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@android:color/darker_gray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:weightSum="2">
                    <TextView
                        android:id="@+id/totaltxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Total"
                        android:textAllCaps="true"

                        android:textColor="#000"
                        android:textSize="@dimen/header_txt"

                        />
                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"

                        android:layout_weight="1"
                        android:gravity="right"
                        android:paddingRight="10dp"

                        android:text="$70"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/main_txt"

                        />
                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/cancel_appointment_back"
            android:textAllCaps="true"
            android:text="Cancel Request"
            android:textSize="@dimen/header_txt"
            android:gravity="center"
            android:textColor="#fff"
            android:textStyle="bold"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>