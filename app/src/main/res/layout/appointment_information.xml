<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"


            android:padding="8dp"
            android:src="@drawable/white_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Appointment Details"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/navigation_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"


            android:padding="8dp"
            android:src="@drawable/navigation_icon" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:id="@+id/user_view"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/user_back" />

                    <TextView
                        android:id="@+id/name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/user_view"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="@dimen/header_txt" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name_txt"
                        android:layout_marginLeft="10dp"

                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/user_view">

                        <ImageView
                            android:id="@+id/address_img"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/address_loc" />

                        <TextView
                            android:id="@+id/address_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_toRightOf="@+id/address_img"
                            android:singleLine="true"
                            android:text=""
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/sab_txt" />

                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"

                    android:text="Mode of Service"


                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/sab_txt"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e6e4e4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/service_img">


                        <TextView
                            android:id="@+id/service_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"
                            android:text="Repair at Service Point"


                            android:textColor="#000"
                            android:textSize="@dimen/main_txt" />


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/service_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/home_repair" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_marginTop="5dp"

                            android:text="Est. Travel Time"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/main_txt" />

                        <TextView
                            android:id="@+id/estimate_travel_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/close_txt"

                            android:layout_centerInParent="true"
                            android:text="2 Hours"


                            android:textColor="#000"
                            android:textSize="@dimen/main_txt" />


                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"

                    android:text="Appointment Details"


                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/sab_txt"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e6e4e4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/calender_img">


                        <TextView
                            android:id="@+id/date_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_centerInParent="true"
                            android:text=""


                            android:textColor="#000"
                            android:textSize="@dimen/main_txt" />


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/calender_img"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/calendar_img" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            android:layout_marginTop="5dp"

                            android:text="Est. Service Time"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/main_txt" />

                        <TextView
                            android:id="@+id/total_est_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/close_txt"

                            android:layout_centerInParent="true"
                            android:text="2 Hours"


                            android:textColor="#000"
                            android:textSize="@dimen/main_txt" />


                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back"
                android:orientation="vertical">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"

                    android:text="Device Details"


                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/sab_txt"

                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#e6e4e4" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    >


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/model_img">


                        <TextView
                            android:id="@+id/device_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_centerInParent="true"
                            android:text="iPhone 5s (Gold)"


                            android:textColor="#000"
                            android:textSize="@dimen/main_txt" />


                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/model_img"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/device_img" />

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/order_serview_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"

                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="Order Services"


                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/sab_txt"

                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e6e4e4" />

                    <ListView
                        android:id="@+id/service_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:divider="@android:color/darker_gray"
                        android:dividerHeight="0.5dp"></ListView>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#e6e4e4" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/othertxt"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"

                                android:layout_marginRight="10dp"

                                android:layout_toLeftOf="@+id/other_price"
                                android:text="Travel fee"
                                android:textColor="#000"
                                android:textSize="@dimen/main_txt"

                                />

                            <TextView
                                android:id="@+id/other_price"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:gravity="right"
                                android:paddingRight="10dp"

                                android:text="€0"
                                android:textColor="@color/main_color"
                                android:textSize="@dimen/main_txt"

                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/discounttxt"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"

                                android:layout_marginRight="10dp"

                                android:layout_toLeftOf="@+id/discount_price"
                                android:text="Discount"
                                android:textColor="#000"
                                android:textSize="@dimen/main_txt"

                                />

                            <TextView
                                android:id="@+id/discount_price"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:gravity="right"
                                android:paddingRight="10dp"

                                android:text="€0"
                                android:textColor="@color/main_color"
                                android:textSize="@dimen/main_txt"

                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/vattxt"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"

                                android:layout_marginRight="10dp"

                                android:layout_toLeftOf="@+id/vat_price"
                                android:text="VAT"
                                android:textColor="#000"
                                android:textSize="@dimen/main_txt"

                                />

                            <TextView
                                android:id="@+id/vat_price"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginLeft="10dp"
                                android:gravity="right"
                                android:paddingRight="10dp"

                                android:text="€0"
                                android:textColor="@color/main_color"
                                android:textSize="@dimen/main_txt"

                                />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/totaltxt"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"

                                android:layout_marginRight="10dp"
                                android:layout_toLeftOf="@+id/total_price"
                                android:layout_weight="1"
                                android:text="Total"

                                android:textColor="#000"
                                android:textSize="@dimen/main_txt"

                                />

                            <TextView
                                android:id="@+id/total_price"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"

                                android:layout_alignParentRight="true"
                                android:layout_marginRight="10dp"
                                android:layout_weight="1"
                                android:gravity="right"

                                android:text="€0"
                                android:textColor="@color/main_color"
                                android:textSize="@dimen/sab_txt"

                                />
                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/complete_request_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"

                    android:layout_weight="1"
                    android:background="@drawable/green_btn"
                    android:gravity="center"
                    android:text="Submit order"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/cancel_request_txt"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/red_btn_back"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>