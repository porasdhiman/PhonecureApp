<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"


            android:padding="8dp"
            android:src="@drawable/white_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="Technicians profile"
            android:textColor="#fff"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"


            android:padding="8dp"
            android:src="@drawable/note"
            android:visibility="gone" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header_view">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/calender_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/calender_back"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="345dp"
                        android:layout_gravity="top|center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="65dp"
                        android:paddingLeft="10dp"

                        android:paddingRight="10dp"
                        app:mcv_arrowColor="@color/main_color"
                        app:mcv_headerTextAppearance="@style/CustomDayTextAppearance"
                        app:mcv_selectionColor="@color/main_color"
                        app:mcv_showOtherDates="all"

                        app:mcv_weekDayTextAppearance="@style/CustomDayTextAppearance" />
                </LinearLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/user_back" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/user_img"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="@dimen/header_txt" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/calender_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/item_back">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="Time"
                    android:textColor="#000"
                    android:textSize="@dimen/header_txt" />

                <TextView
                    android:id="@+id/time_txtView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/forward_img"

                    android:hint="Select time"
                    android:textColor="@color/main_color"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="@dimen/header_txt" />

                <ImageView
                    android:id="@+id/forward_img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/forward" />


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/pick_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@+id/time_layout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/calender_back"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/pickup_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/pickUp_img"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"


                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"

                        android:src="@drawable/pickup_unselect"


                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"


                        android:text="Repair at Service Point"
                        android:textColor="#000"
                        android:textSize="12dp"


                        />

                    <TextView
                        android:id="@+id/distance_shop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"


                        android:text=""
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dp"


                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dropoff_layout"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/dropoff_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"


                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"

                        android:src="@drawable/dropoff_unselect"


                        />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"

                        android:layout_marginLeft="10dp"
                        android:gravity="center"

                        android:text="Repair at your location"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerInParent="true"
                        android:layout_gravity="center_horizontal"

                        android:layout_marginLeft="10dp"
                        android:gravity="center"

                        android:text="Est. time 10 min"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12dp"


                        />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/book_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/pick_view"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/green_btn"
                android:gravity="center"
                android:text="Book now"
                android:textAllCaps="true"
                android:textColor="#fff"
                android:textSize="@dimen/header_txt"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/book_btn" />
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>