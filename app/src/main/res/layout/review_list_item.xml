<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_back"
        android:padding="5dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/user_view"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/user_back"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_view"
                android:layout_marginLeft="20dp"
                android:text="iFaxihat"
                android:textSize="@dimen/sab_txt"
                android:layout_marginTop="2dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/user_view"
                android:layout_marginLeft="20dp"

                android:text="08-11-2018"
                android:textSize="@dimen/sab_txt"
                android:layout_below="@+id/name"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/comment_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"



                android:text="Excellent repair $ service"
                android:textSize="@dimen/main_txt"
                android:layout_below="@+id/user_view"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="2dp"
                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="2dp"

                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:padding="2dp"

                    android:src="@drawable/star"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star"
                    android:padding="2dp"
                    />
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/star"
                    android:padding="2dp"
                    />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>