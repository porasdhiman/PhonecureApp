<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
        android:layout_marginTop="40dp"/>
    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/user_back"
            />
<TextView
    android:id="@+id/user_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Poras dhiman"
    android:textColor="#989898"
    android:textSize="14sp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"

    android:layout_toRightOf="@+id/user_img"/>
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9780231725"
            android:textColor="#989898"
            android:layout_below="@+id/user_name"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/user_img"/>
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="p@gmail.com"
            android:textColor="#989898"
            android:layout_below="@+id/user_phone"
            android:textSize="14sp"
            android:layout_marginTop="5dp"

            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/user_img"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forward"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="#989898"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">
        <RelativeLayout
            android:id="@+id/home_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/gray_circle_back"
            >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/home"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SBP HOMES"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/home_icon"/>
        <TextView
            android:id="@+id/location_name_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mohali"
            android:textColor="#989898"
            android:layout_below="@+id/home_name"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@+id/home_icon"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forward"
            android:layout_marginRight="9dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:id="@+id/imageView2" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textColor="#989898"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
        android:layout_marginTop="10dp"
        />
    <RelativeLayout
        android:id="@+id/change_password_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:id="@+id/change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change password"
            android:textColor="#000"
            android:textSize="16sp"


            android:layout_marginTop="5dp"
           />


        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/forward"
            android:layout_marginRight="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:id="@+id/imageView3" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
        />
    <RelativeLayout
        android:id="@+id/sign_out_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:padding="10dp">

        <TextView
            android:id="@+id/logout_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SignOut"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:layout_marginTop="5dp"

            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e6e4e4"
        />
    </LinearLayout>

</ScrollView>
</LinearLayout>