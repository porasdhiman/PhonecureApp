<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_back"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/blank_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/ellipse_bcak">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ellipse_dot" />
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/blank_layout"
        android:layout_marginTop="30dp"
        android:background="@drawable/form_back">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="250dp"


            android:layout_centerHorizontal="true"


            android:orientation="vertical"


            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_selectore_back">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                <TextView
                    android:id="@+id/current_device_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Current Device:"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textAllCaps="true"

                    android:textSize="@dimen/header_txt"
                   />
                    <TextView
                        android:id="@+id/current_device_name_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="iPhone 7 64 black"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/current_device_txt"
                        android:textSize="@dimen/header_txt"

                        />
                    <RelativeLayout
                        android:id="@+id/apple_logo"
                        android:layout_width="40dp"
                        android:layout_height="60dp"
                        android:background="@drawable/phone_back"
                        android:layout_marginLeft="40dp"
                        android:layout_toLeftOf="@+id/white_forward">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/apple_logo"
                            android:layout_centerInParent="true"/>
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/white_forward"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/white_forward"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/home_selectore_back">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <TextView
                        android:id="@+id/sure_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Not sure your"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:textSize="@dimen/header_txt"
                        />
                    <TextView
                        android:id="@+id/deviceType_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="What your device"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:layout_marginTop="5dp"

                        android:layout_below="@+id/sure_txt"
                        android:textSize="@dimen/header_txt"

                        />
                    <RelativeLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_toLeftOf="@+id/white_forward_two">
                        <TextView
                            android:id="@+id/scan_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           android:text="Scan Device"
                            android:textAllCaps="true"
                            android:textColor="#000"
                            android:textSize="10dp"

                 />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="We recognize\n its for you"
                            android:textAllCaps="true"
                            android:textColor="#000"
                            android:textSize="10dp"
                            android:layout_below="@+id/scan_txt"


                            />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/white_forward_two"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/white_forward"

                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>
            </RelativeLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Or select other device"
                    android:textColor="@android:color/darker_gray"
                    android:textAllCaps="true"
                    android:textSize="@dimen/main_txt"


                    />
                <view
                    android:layout_width="150dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>



            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>

