<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mapbox="http://schemas.android.com/tools"
    >

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view"

        mapbox:mapbox_styleUrl="mapbox://styles/mapbox/streets-v9"

        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/black">


        <TextView
            android:id="@+id/header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"

            android:gravity="center"
            android:text="PhoneCure"
            android:textColor="#fff"
            android:textSize="24dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/notification_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/notification" />

        <ImageView
            android:id="@+id/message_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/notification_img"
            android:src="@drawable/message_img" />

    </RelativeLayout>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/form_back">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="vertical"


            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
    <TextView
        android:id="@+id/techniciansName_txtView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Hi"
        android:textColor="#000"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="2">




                <RelativeLayout
                    android:id="@+id/appointment_layout"

                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_green_back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/appointment_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/appoinment" />

                    <TextView
                        android:id="@+id/appointment_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appointment_img"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Appointment"
                        android:textColor="#fff"
                        android:textSize="18dp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/booking_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/appointment_txt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/service_layout"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_green_back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/services_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/service_img" />

                    <TextView
                        android:id="@+id/services_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/services_img"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Services"
                        android:textColor="#fff"
                        android:textSize="18dp"

                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/service_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/services_txt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:textSize="14dp"
                        android:textStyle="bold" />


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:id="@+id/setting_layout"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_green_back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/cure_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/setting_img" />

                    <TextView
                        android:id="@+id/cure_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cure_img"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Setting"
                        android:textColor="#fff"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cure_txt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Adjust setting"
                        android:textSize="14dp"


                        android:textStyle="bold"

                        />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/profile_layout"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/home_green_back"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/scan_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/profile_img" />

                    <TextView
                        android:id="@+id/scan_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scan_img"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Profile"
                        android:textColor="#fff"

                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/scan_txt"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Update Profile"
                        android:textSize="14dp"
                        android:textStyle="bold"

                        />


                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>